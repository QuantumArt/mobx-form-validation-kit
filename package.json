{
  "name": "@quantumart/mobx-form-validation-kit",
  "version": "2.0.1",
  "description": "mobx typescript form control validation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsc && jest"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/QuantumArt/mobx-form-validation-kit"
  },
  "bugs": {
    "url": "https://github.com/QuantumArt/mobx-form-validation-kit/issues"
  },
  "author": "Vitalii Alferov (company: http://quantumart.ru/)",
  "license": "MIT",
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "peerDependencies": {
    "mobx": "^4.0.0 || ^5.0.0",
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^12.7.2",
    "@types/react": "^16.8.24",
    "jest": "^26.6.3",
    "mobx": "^4.14.0",
    "prettier": "^1.18.2",
    "react": "^16.8.0",
    "ts-jest": "^26.5.4",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.3"
  },
  "prepublish": "tsc",
  "keywords": [
    "npm",
    "package",
    "validation",
    "mobx",
    "react",
    "IE10"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.jsx",
      "src/**/*.tsx"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "transform": {
      "^.+\\.(jsx?|tsx?)$": "ts-jest"
    },
    "testRegex": ".+\\.test\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "jsx",
      "tsx"
    ]
  }
}
